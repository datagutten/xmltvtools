{
    "name": "datagutten/xmltvtools",
    "description": "PHP class and tools to work with XMLTV files",
    "type": "library",
    "require": {
        "datagutten/tools": "^1.8",
        "symfony/filesystem": "^4.3|^5.0",
        "ext-simplexml": "*",
        "ext-dom": "*",
        "ext-libxml": "*",
        "php": ">=7.4"
    },
    "suggest": {
        "datagutten/video-tools": "Get duration of video files to calculate end time"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "datagutten/video-tools": "^2.0"
    },
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "datagutten",
            "email": "datagutten@datagutten.net"
        }
    ],
    "autoload": {
        "psr-4": {
            "datagutten\\xmltv\\tools\\": "xmltv",
            "datagutten\\xmltv\\tools\\exceptions\\": "xmltv/exceptions",
            "datagutten\\xmltv\\tests\\tools\\": "tests",
            "datagutten\\dreambox\\": "dreambox",
            "datagutten\\dreambox\\tests\\": "tests/dreambox"
        }
    },
    "bin": ["bin/recording_info"],
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
